<div class='jumbotron'>
	<h2>Sign up</h2>
	<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
	  <%= devise_error_messages! %>

	  <div class="form-group">
	    <%= f.label :email, class: 'col-sm-3 control-label' %>
	    <div class="col-sm-4">
	      <%= f.email_field :email, autofocus: true, class: 'form-control' %>
	    </div>
	  </div>

	  <div class="form-group">
	    <%= f.label :password, class: 'col-sm-3 control-label' %>
	    <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %>
	    <div class="col-sm-4">
	      <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
	    </div>
	  </div>

	  <div class="form-group">
	    <%= f.label :password_confirmation, class: 'col-sm-3 control-label' %>
	    <div class="col-sm-4">
	      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
	    </div>
	  </div>

	  <div class="form-group">
	    <%= f.label :first_name, class: 'col-sm-3 control-label' %>
	    <div class="col-sm-4">
	      <%= f.text_field :first_name, class: 'form-control' %>
	    </div>
	  </div>

	  <div class="form-group">
	    <%= f.label :last_name, class: 'col-sm-3 control-label' %>
	    <div class="col-sm-4">
	      <%= f.text_field :last_name, class: 'form-control' %>
	    </div>
	  </div>

	  <div class="form-group">
	    <%= f.label :age, class: 'col-sm-3 control-label' %>
	    <div class="col-sm-2">
	      <%= f.number_field :age, class: 'form-control' %>
	    </div>
	  </div>

	  <div class="form-group">
	    <%= f.label :gender, class: 'col-sm-3 control-label' %>
	    <div class="col-sm-4">
	      <%= f.select :gender,options_for_select([['Male', 'male'], ['Female','female']]),{prompt: 'Select'}, class: 'form-control' %>
	    </div>
	  </div>

	  <div class="form-group">
	    <%= f.label ' ', class: 'col-sm-3 control-label' %>
	    <div class="col-sm-4">
	      <%= f.submit "Sign up", class: 'btn btn-info' %>
	    </div>
	  </div>
	<% end %>

	<%= render "devise/shared/links" %>
</div>
