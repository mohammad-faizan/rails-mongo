<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%= render 'layouts/header' %>
    <div class="container mg-top2">
      <% if flash.present? %>
        <% flash.each do |k, v| %>
          <div class="<%= alert_class(k) %>" role="alert"><%= v %></div>
        <% end %>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
